<div>
  <div>
    <h1>
      Photo #<%= @the_photo.id %> details
    </h1>

    <div>
      <div>
        <a href="/photos">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_photo/<%= @the_photo.id %>">
          Delete photo
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Image address
      </dt>
      <dd>
        <%= @the_photo.image_address %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_photo.user_id %>
      </dd>

      <dt>
        Bathroom
      </dt>
      <dd>
        <%= @the_photo.bathroom_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit photo
    </h2>

    <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      <div>
        <label for="image_address_box">
          Image address
        </label>

        <input type="text" id="image_address_box" name="query_image_address" value="<%= @the_photo.image_address %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_photo.user_id %>">
      </div>

      <div>
        <label for="bathroom_id_box">
          Bathroom
        </label>

        <input type="text" id="bathroom_id_box" name="query_bathroom_id" value="<%= @the_photo.bathroom_id %>">
      </div>

      <button>
        Update photo
      </button>
    </form>
  </div>
</div>

<hr>
