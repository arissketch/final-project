    <h1>
      <%= @the_bathroom.name %>
    </h1>

<div>
  <div>
    <h2>
      Add a new rating
    </h2>

    <form action="/insert_rating/<%=@the_bathroom.id%>" method="post">
    <% if current_user != nil %>
    
      <div>
        <label for="cleaniness_box">
          Cleaniness
        </label>

        <input type="text" id="cleaniness_box" name="query_cleaniness">
      </div>

      <div>
        <label for="safety_box">
          Safety
        </label>

        <input type="text" id="safety_box" name="query_safety">
      </div>

      <div>
        <label for="environment_box">
          Environment
        </label>

        <input type="text" id="environment_box" name="query_environment">
      </div>

      <button>
        Create rating
      </button>
    </form>
<% else %>
      <p>You must <a href="/users/sign_in">sign in</a> to add a bathroom.</p>
<% end %>
  </div>
</div>

<div>
  <div>
    <h2>
      Add a new comment
    </h2>

    <form action="/insert_comment" method="post">
    <% if current_user != nil %>
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="comments_box">
          Comments
        </label>

        <input type="text" id="comments_box" name="query_comments">
      </div>

      <div>
        <label for="bathroom_id_box">
          Bathroom
        </label>

        <input type="text" id="bathroom_id_box" name="query_bathroom_id">
      </div>

      <button>
        Create comment
      </button>
    </form>
<% else %>
      <p>You must <a href="/users/sign_in">sign in</a> to add a bathroom.</p>
<% end %>
  </div>
</div>
