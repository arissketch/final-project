<div>
  <div>
    <h1>
      Rating #<%= @the_rating.id %> details
    </h1>

    <div>
      <div>
        <a href="/ratings">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_rating/<%= @the_rating.id %>">
          Delete rating
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Comment
      </dt>
      <dd>
        <%= @the_rating.comment %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_rating.user.username %>
      </dd>

      <dt>
        Cleaniness
      </dt>
      <dd>
        <%= @the_rating.cleaniness %>
      </dd>

      <dt>
        Safety
      </dt>
      <dd>
        <%= @the_rating.safety %>
      </dd>

      <dt>
        Bathroom
      </dt>
      <dd>
        <%= @the_rating.bathroom_id %>
      </dd>

      <dt>
        Environment
      </dt>
      <dd>
        <%= @the_rating.environment %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_rating.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_rating.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>
