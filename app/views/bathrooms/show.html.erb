<div>
  <div>
    <h1>
      Bathroom #<%= @the_bathroom.id %> details
    </h1>

    <div>
      <div>
        <a href="/bathrooms">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_bathroom/<%= @the_bathroom.id %>">
          Delete bathroom
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Address
      </dt>
      <dd>
        <%= @the_bathroom.address %>
      </dd>

      <dt>
        Comment
      </dt>
      <dd>
        <%= @the_bathroom.comment_id %>
      </dd>

      <dt>
        Open to public
      </dt>
      <dd>
        <%= @the_bathroom.open_to_public %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bathroom.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bathroom.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit bathroom
    </h2>

    <form action="/modify_bathroom/<%= @the_bathroom.id %>"  method="post" >
      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" value="<%= @the_bathroom.address %>">
      </div>

      <div>
        <label for="comment_id_box">
          Comment
        </label>

        <input type="text" id="comment_id_box" name="query_comment_id" value="<%= @the_bathroom.comment_id %>">
      </div>

      <div>
        <input type="checkbox" id="open_to_public_box" name="query_open_to_public" value="1" <%= "checked" if @the_bathroom.open_to_public %>>

        <label for="open_to_public_box">
            Open to public
        </label>
      </div>

      <button>
        Update bathroom
      </button>
    </form>
  </div>
</div>

<hr>
